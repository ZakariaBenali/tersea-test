{
	"compilerOptions": {
		"lib": ["dom", "es6", "es2019", "esnext.asynciterable"],
		"target": "es6",
		"module": "commonjs",
		"declaration": false,
		"moduleResolution": "node",
		"outDir": "./build",
		"sourceMap": true,
		"composite": false,
		"removeComments": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"rootDir": "src"
	},
	"ts-node": {
		"files": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
